<UserControl x:Class="UnusArmatusLattro.Views.Slots"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UnusArmatusLattro.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border BorderBrush="#4b4b4b" BorderThickness="2" >
        <Grid >
            <Image Source="{Binding ImageSource, RelativeSource={RelativeSource AncestorType=UserControl}}" Width="300" Height="300" Stretch="Fill" HorizontalAlignment="Left" VerticalAlignment="Top"></Image>
            <TextBlock Text="{Binding number, RelativeSource={RelativeSource AncestorType=UserControl}}" FontSize="200" HorizontalAlignment="Center"></TextBlock>
            
        </Grid>
    </Border>
</UserControl>
