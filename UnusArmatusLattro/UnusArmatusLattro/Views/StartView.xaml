<UserControl x:Class="UnusArmatusLattro.Views.StartView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UnusArmatusLattro.Views"
             xmlns:viewmodels="clr-namespace:UnusArmatusLattro.ViewModels"
             xmlns:datan="clr-namespace:UnusArmatusLattro.Data"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1520"
             >
    
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/Images/MainMenue.png" />
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="193" />
            <ColumnDefinition Width="303" />
            <ColumnDefinition Width="370" />
            <ColumnDefinition Width="536" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="345" />
            <RowDefinition Height="81" />
            <RowDefinition Height="39" />
            <RowDefinition Height="81" />
            <RowDefinition Height="35" />
            <RowDefinition Height="81" />
            <RowDefinition Height="*" />
            
        </Grid.RowDefinitions>

        <Button Grid.Column="1" Grid.Row="1" Opacity="0"   Command="{Binding ChangeView}" CommandParameter="{x:Static datan:GoToView.Rules}" Cursor="Hand"/>

        <Button Grid.Column="1" Grid.Row="3" Opacity="0"  Command="{Binding ChangeView}" CommandParameter="{x:Static datan:GoToView.HighScore}" Cursor="Hand"/>

        <Button Grid.Column="1" Grid.Row="5" Opacity="0" Background="AliceBlue" FontFamily="Georgia bold" Command="{Binding ChangeView}" CommandParameter="{x:Static datan:GoToView.Exit}" Cursor="Hand"/>

        <Grid Grid.Row="1" Grid.Column="3" Grid.RowSpan="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="153" />
                <RowDefinition Height="31" />
                <RowDefinition Height="154" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Button Opacity="0" Command="{Binding ChangeView}" CommandParameter="{x:Static datan:GoToView.SpinGame}" Cursor="Hand" />
            <Button Grid.Row="2" Opacity="0" Command="{Binding ChangeView}" CommandParameter="{x:Static datan:GoToView.BettingGame}" Cursor="Hand" />



        </Grid>
        
         
    </Grid>
   
</UserControl>
