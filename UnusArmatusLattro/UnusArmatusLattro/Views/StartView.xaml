<UserControl x:Class="UnusArmatusLattro.Views.StartView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UnusArmatusLattro.Views"
             xmlns:viewmodels="clr-namespace:UnusArmatusLattro.ViewModels"
             xmlns:datan="clr-namespace:UnusArmatusLattro.Data"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             >
    <Grid Background ="Turquoise">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="50" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
            <RowDefinition Height="5" />
            <RowDefinition Height="*" />
            <RowDefinition Height="5" />
            <RowDefinition Height="*" />
            <RowDefinition Height="5" />
            <RowDefinition Height="*" />
            <RowDefinition Height="5" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Image Source="/Resources/Images/cherries.png" Width="25" Height="25"/>
        <!--<ContentControl Content="{Binding SelectedView}"/>-->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" VerticalAlignment="Center">
            
        </StackPanel>

        <Button Grid.Column="2" Grid.Row="2" VerticalAlignment="Center" Height="100" FontFamily="Georgia bold" Command="{Binding ChangeView}" CommandParameter="{x:Static datan:GoToView.SpinGame}"  >
            Starta Spinspel
        </Button>

        <Button Grid.Column="2" Grid.Row="4" VerticalAlignment="Center" Height="100" FontFamily="Georgia bold"   >
           Starta Bettingspel
        </Button>

        <Button Grid.Column="2" Grid.Row="6" VerticalAlignment="Center" Height="100" FontFamily="Georgia bold" Command="{Binding ChangeView}" CommandParameter="{x:Static datan:GoToView.Rules}">
            Spelregler
        </Button>
        <Button Grid.Column="2" Grid.Row="8" VerticalAlignment="Center" Height="100" FontFamily="Georgia bold" Command="{Binding ChangeView}" CommandParameter="{x:Static datan:GoToView.HighScore}">
            HighScore

        <Button Grid.Column="2" Grid.Row="2" VerticalAlignment="Bottom" Height="100" FontFamily="Georgia bold" Command="{Binding ChangeView}" CommandParameter="{x:Static datan:Difficulties.Normal}">
            Normal

        </Button>
        <Button Grid.Column="2" Grid.Row="10" VerticalAlignment="Center" Height="100" FontFamily="Georgia bold" Command="{Binding ChangeView}" CommandParameter="{x:Static datan:GoToView.Exit}">
            Avsluta
        </Button>


        <Label Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" Content="Unus Armatus Latro" FontSize="40" FontFamily ="Georgia bold" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Center" >
            
        </Label>
       
        
         
    </Grid>
</UserControl>
