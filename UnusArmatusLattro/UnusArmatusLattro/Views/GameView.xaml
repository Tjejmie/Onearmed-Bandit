<UserControl x:Class="UnusArmatusLattro.Views.GameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UnusArmatusLattro.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="300" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="*" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <ItemsControl  ItemsSource="{Binding SlotMachine}" Grid.Column="1" Grid.Row="1" >
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="4" Rows="1" Height="300" Width="auto"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
            <Button Grid.Column="1" Grid.Row="2" Content="Spin" Command="{Binding Spin}" Visibility="{Binding GameOver}"/>
            <TextBox Text="{Binding User}" Grid.Column="2" Grid.Row="0" Margin="0,0,0,0" FontSize="20" Width="200" VerticalAlignment="top" HorizontalAlignment="Center" FontFamily="calibri-bold" FontWeight="Black">

            </TextBox>
        <Button Width="200" Grid.Column="2" Grid.Row="0" Height="30" Command="{Binding sendToDatabase}" Visibility="{Binding NewHighScore}">
                skicka
            </Button>

        <ItemsControl Grid.Column="2" Grid.Row="1" ItemsSource="{Binding HighScores}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="1" Rows="10" Height="300" Width="auto"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
       
        <Button Grid.Column="1" Grid.Row="2" Content="Spin" Command="{Binding Spin}" Visibility="{Binding GameOverState}"/>
        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Center">
            
            <TextBlock Text="{Binding Score}" FontSize="20" FontFamily="calibri-bold" FontWeight="Black">
                
            </TextBlock>
            <TextBlock Text="{Binding RemainingSpins}" FontSize="20" FontFamily="calibri-bold" FontWeight="Black">
                
            </TextBlock>
        </StackPanel>
    </Grid>
    
</UserControl>
